extends layout

block content
    h1= title
    form#userform
        input#username.form-control(type='text', size=placeholder='Twitter Handle')
        button.btn.btn-primary(type='submit') generate
    #errors
    #chart  
        #tweet-heatmap
        button#prev.cal-control.btn.btn-default.btn-raised prev
        button#next.cal-control.btn.btn-default.btn-raised next
    script(src='https://code.jquery.com/jquery-2.1.3.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/d3/3.5.5/d3.min.js')
    script(src='/javascripts/cal-heatmap.js')
    script(src='/javascripts/index.js')
    link(rel='stylesheet', href='/stylesheets/cal-heatmap.css')
    